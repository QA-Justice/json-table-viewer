{
  "name": "JSON Table Viewer",
  "version": "1.1.1",
  "manifest_version": 3,
  "description": "Convert JSON to table with CSV export, pivot view, and clipboard copy.",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open JSON Table Viewer",
    "default_icon": {
      "16": "favicon-star.png",
      "32": "favicon-star.png"
    }
  },
  "side_panel": {
    "default_path": "index-improved.html"
  },
  "icons": {
    "16": "favicon-star.png",
    "32": "favicon-star.png",
    "48": "favicon-star.png",
    "128": "favicon-star.png"
  }
}
